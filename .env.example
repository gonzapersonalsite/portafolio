# ==========================================
# DATABASE CONFIGURATION (PostgreSQL Container)
# ==========================================
POSTGRES_DB=portfolio_db
POSTGRES_USER=portfolio_user
POSTGRES_PASSWORD=change_me_secure_password
DATABASE_PORT=5432

# ==========================================
# BACKEND CONFIGURATION (Spring Boot)
# ==========================================

# Database Connection
# Local (Docker): jdbc:postgresql://database:5432/portfolio_db
# Local (No Docker): jdbc:postgresql://localhost:5432/portfolio_db
# Production (Render): jdbc:postgresql://hostname:port/database_name
SPRING_DATASOURCE_URL=jdbc:postgresql://database:5432/portfolio_db
SPRING_DATASOURCE_USERNAME=portfolio_user
SPRING_DATASOURCE_PASSWORD=change_me_secure_password

# Security
# MUST be consistent across environments
JWT_SECRET=change_me_secure_secret_key_must_be_long_enough
JWT_EXPIRATION=86400000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_admin_password

# CORS Configuration
# Comma-separated list of allowed origins
# Local: http://localhost:5173
# Production: https://mi-portafolio-gonzalo.vercel.app
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://mi-portafolio-gonzalo.vercel.app

# Rate Limiting
RATE_LIMIT_ENABLED=true

# ==========================================
# FRONTEND CONFIGURATION (Vite/React)
# ==========================================

# API Base URL (Used by the App to make requests)
# Option A: Local Dev (Docker/Vite Proxy) -> Use "/api"
# Option B: Production (Vercel + Render) -> Use Full URL "https://your-backend-app.onrender.com/api"
VITE_API_BASE_URL=/api

# API Target (Only for Local Dev Proxy)
# Defines where "/api" requests are forwarded to by the Vite Dev Server
# Local Docker: http://backend:8080
# Local Standalone: http://localhost:8080
VITE_API_TARGET=http://backend:8080

# EmailJS Configuration
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key
